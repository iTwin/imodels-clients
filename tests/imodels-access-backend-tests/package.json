{
  "name": "@itwin/imodels-access-backend-tests",
  "version": "0.3.0",
  "description": "Tests for iTwin platform and iModels API interoperability package - @itwin/imodels-access-backend.",
  "keywords": [
    "Bentley",
    "iModel",
    "iTwin",
    "iTwin platform",
    "iTwin.js",
    "Tests"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/imodels-clients"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "scripts": {
    "build": "tsc 1>&2",
    "cover": "nyc npm test",
    "lint": "eslint ./src/**/*.ts 1>&2",
    "lint-fix": "eslint --fix ./src/**/*.ts 1>&2 && sort-package-json",
    "spell-check": "cspell ** --config ./node_modules/@itwin/imodels-client-common-config/cspell.json",
    "test:integration": "mocha lib/**/*.test.js --color --timeout 180000 --exit"
  },
  "eslintConfig": {
    "extends": "./node_modules/@itwin/imodels-client-common-config/.eslintrc.json"
  },
  "dependencies": {
    "@itwin/core-backend": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/ecschema-metadata": "rc",
    "@itwin/imodels-access-backend": "~0.2.2",
    "@itwin/imodels-client-authoring": "~0.2.2",
    "@itwin/imodels-client-test-utils": "~0.2.2",
    "dotenv": "~10.0.0",
    "inversify": "~5.0.1",
    "mocha": "~9.0.2",
    "reflect-metadata": "~0.1.13"
  },
  "devDependencies": {
    "@itwin/imodels-client-common-config": "~0.2.2",
    "@types/chai": "~4.2.21",
    "@types/mocha": "~9.0.0",
    "@types/node": "^16.4.6",
    "cpx": "~1.5.0",
    "nyc": "14.0.0",
    "typescript": "~4.4.0"
  }
}
