{
  "name": "@itwin/imodels-access-common",
  "version": "6.0.0-dev.0",
  "description": "Common code package for @itwin/imodels-access-frontend and @itwin/imodels-access-backend.",
  "keywords": [
    "Bentley",
    "iModel",
    "iTwin",
    "iTwin platform",
    "iTwin.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/imodels-clients"
  },
  "license": "MIT",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run -s build:cjs && npm run -s build:esm",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.esm.json",
    "clean": "rimraf lib",
    "lint": "eslint ./src/**/*.ts 1>&2",
    "lint-fix": "eslint --fix ./src/**/*.ts 1>&2 && sort-package-json",
    "spell-check": "cspell \"**\" --config ./node_modules/@itwin/imodels-client-common-config/cspell.json"
  },
  "eslintConfig": {
    "extends": "./node_modules/@itwin/imodels-client-common-config/.eslintrc.json"
  },
  "dependencies": {
    "@itwin/imodels-client-management": "workspace:*",
    "@itwin/imodels-client-authoring": "workspace:*"
  },
  "devDependencies": {
    "@itwin/core-bentley": "^5.0.0-dev.0",
    "@itwin/core-common": "^5.0.0-dev.0",
    "@itwin/core-geometry": "^5.0.0-dev.0",
    "@itwin/eslint-plugin": "~3.7.8",
    "@itwin/imodels-client-common-config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "~6.14.0",
    "cspell": "~5.21.0",
    "eslint": "~8.55.0",
    "eslint-plugin-deprecation": "~1.5.0",
    "eslint-plugin-import": "~2.29.0",
    "eslint-plugin-mocha": "~10.2.0",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "rimraf": "~3.0.2",
    "sort-package-json": "~1.53.1",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "@itwin/core-bentley": "^5.0.0-dev.0",
    "@itwin/core-common": "^5.0.0-dev.0"
  }
}
