{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.35.2",
  "pnpmVersion": "4.14.4",
  "nodeSupportedVersionRange": ">=12.13.0 <17.0.0",
  "ensureConsistentVersions": true,
  "projectFolderMinDepth": 1,
  "projectFolderMaxDepth": 2,
  "repository": {
    "url": "https://github.com/iTwin/imodels-clients",
    "defaultBranch": "main",
    "defaultRemote": "origin"
  },
  "projects": [
    {
      "packageName": "@itwin/imodels-client-management",
      "projectFolder": "clients/imodels-client-management",
      "shouldPublish": true,
      "versionPolicyName": "prerelease-monorepo-lockStep"
    },
    {
      "packageName": "@itwin/imodels-client-tests",
      "projectFolder": "tests/imodels-client-tests",
      "shouldPublish": true,
      "versionPolicyName": "prerelease-monorepo-lockStep"
    },
    {
      "packageName": "@itwin/imodels-client-common-config",
      "projectFolder": "utils/imodels-client-common-config",
      "shouldPublish": true,
      "versionPolicyName": "prerelease-monorepo-lockStep"
    }
  ]
}
